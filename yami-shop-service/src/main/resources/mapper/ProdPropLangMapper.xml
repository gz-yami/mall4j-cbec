<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.yami.shop.dao.ProdPropLangMapper">

  <resultMap id="prodPropLangMap" type="com.yami.shop.bean.model.ProdPropLang">
    <id column="prop_id" property="propId" />
    <result column="lang" property="lang"/>
    <result column="prop_name" property="propName"/>
  </resultMap>

  <insert id="insertBatch">
    INSERT INTO tz_prod_prop_lang (`prop_id`, `lang`, `prop_name`)
    VALUES
    <foreach collection="prodPropLangList" item="prodPropLang" separator=",">
      (#{prodPropLang.propId},#{prodPropLang.lang},#{prodPropLang.propName})
    </foreach>
  </insert>
  <delete id="deleteByPropId">
        DELETE FROM
          tz_prod_prop_lang
        WHERE `prop_id` = #{propId}
    </delete>
</mapper>
